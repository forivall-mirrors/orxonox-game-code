    <TetrisCenterpoint name=tetriscenter width=11 height=15 stoneSize=10 stoneTemplate=tetrisstone stoneSpeed=10 position="-55,-75,0">
        <attached>
            <Model position="55,-1,0" mesh="cube.mesh" scale3D="57,1,11" />
