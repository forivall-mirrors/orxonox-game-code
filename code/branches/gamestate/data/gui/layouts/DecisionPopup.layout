                <Property Name="UnifiedAreaRect" Value="{{0.25,0},{0.4375,0},{0.75,0},{0.5375,0}}" />
                <Property Name="InheritsAlpha" Value="False" />
                <Property Name="Alpha" Value="0.8" />
            </Window>
        </Window>
    </Window>
</GUILayout>
