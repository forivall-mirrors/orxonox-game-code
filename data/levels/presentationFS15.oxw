      <events>
        <execute>
          <EventListener event="dockMe" />
        </execute>
      </events>
    </Dock>

    <SpaceShip position="0,0,0" lookat="0,1000,1000" >
      <attached>
        <DistanceTriggerBeacon name="bcnDestroyer" />
        <DockingTarget name="destroyer" />
      </attached>
      <templates>
        <Template link=spaceshipring />
      </templates>
      <events>
        <visibility>
          <EventListener event="dockMe" />
        </visibility>
      </events>
    </SpaceShip>

