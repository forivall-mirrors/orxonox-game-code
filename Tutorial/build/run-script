#!/bin/bash

if [[ !  -f main ]] ; then
	echo "main does not exist"
	echo "did you compile it?"

	exit 1
fi

# check if plugins.cfg exists, and of not create it
# and modify 
if [[ ! -f plugins.cfg ]] ; then 
	#is_tardis=`uname -n | grep tardis`
	#echo "isTardis: ${is_tardis}"
	if uname -n | grep "tardis" > /dev/null ; then 
		sed -e 's:PluginFolder=/usr/lib/OGRE:PluginFolder=/usr/pack/ogre-1.4.5-sd/i686-debian-linux3.1/lib/OGRE/:' plugins.cfg-init > plugins.cfg
	else
		cp plugins.cfg-init plugins.cfg
	fi
fi
exec ./main
